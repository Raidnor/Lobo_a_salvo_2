<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    android:backgroundTint="#0F2560"
    tools:context=".Menu_manuales">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#00FFFFFF">

                <LinearLayout
                    android:layout_width="101dp"
                    android:layout_height="132dp"
                    android:layout_gravity="center"
                    android:background="@drawable/borde_redondo_barra"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btn_incendio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="#095A8D"
                        app:srcCompat="@drawable/ic_baseline_fireplace_72" />

                    <TextView
                        android:id="@+id/incendio"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="En caso de incendio"
                        android:textAlignment="center"
                        android:textColor="@color/texto" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#00FFFFFF">

                <LinearLayout
                    android:layout_width="101dp"
                    android:layout_height="132dp"
                    android:layout_gravity="center"
                    android:background="@drawable/borde_redondo_barra"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btn_pAuxilios"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="#095A8D"
                        app:srcCompat="@drawable/ic_baseline_emergency_24_2" />

                    <TextView
                        android:id="@+id/p_auxilios"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Primeros auxilios"
                        android:textAlignment="center"
                        android:textColor="@color/texto" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#00FFFFFF">

                <LinearLayout
                    android:layout_width="101dp"
                    android:layout_height="132dp"
                    android:layout_gravity="center"
                    android:background="@drawable/borde_redondo_barra"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btn_volcan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="#095A8D"
                        app:srcCompat="@drawable/ic_baseline_volcano_24_2" />

                    <TextView
                        android:id="@+id/volcan"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Peligros volcanicos"
                        android:textAlignment="center"
                        android:textColor="@color/texto" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#00FFFFFF">

                <LinearLayout
                    android:layout_width="101dp"
                    android:layout_height="132dp"
                    android:layout_gravity="center"
                    android:background="@drawable/borde_redondo_barra"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btn_sismo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="#095A8D"
                        app:srcCompat="@drawable/ic_baseline_crisis_alert_24_2" />

                    <TextView
                        android:id="@+id/sismo"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="En caso de sismo"
                        android:textAlignment="center"
                        android:textColor="@color/texto" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#00FFFFFF">

                <LinearLayout
                    android:layout_width="101dp"
                    android:layout_height="132dp"
                    android:layout_gravity="center"
                    android:background="@drawable/borde_redondo_barra"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btn_intoxicacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="#095A8D"
                        app:srcCompat="@drawable/ic_baseline_local_pharmacy_24" />

                    <TextView
                        android:id="@+id/intoxicacion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="En caso de intoxicacion"
                        android:textAlignment="center"
                        android:textColor="@color/texto" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#00000000">

                <LinearLayout
                    android:layout_width="101dp"
                    android:layout_height="132dp"
                    android:layout_gravity="center"
                    android:background="@drawable/borde_redondo_barra"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btn_heridaP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="#095A8D"
                        app:srcCompat="@drawable/ic_baseline_bloodtype_24_2" />

                    <TextView
                        android:id="@+id/heridaP"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Heridas punzo cortantes"
                        android:textAlignment="center"
                        android:textColor="@color/texto" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>