<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Principal_activity"
    tools:showIn="@layout/activity_principal">

    <androidx.cardview.widget.CardView
        android:id="@+id/llamada_seguridad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/borde_redondo"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp">

            <ImageButton
                android:id="@+id/icon_salud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="@drawable/borde_redondo_barra"
                app:srcCompat="@drawable/ic_baseline_phone_24"
                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/text_salud"
                android:layout_width="184dp"
                android:layout_height="61dp"
                android:layout_gravity="bottom|center_horizontal"
                android:text="Llamada de salud"
                android:textColor="@color/fondo"
                android:textSize="20sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="160dp">

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/borde_redondo"
                app:srcCompat="@drawable/ic_baseline_map_24" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="183dp"
                android:layout_height="65dp"
                android:layout_gravity="bottom|center_horizontal"
                android:text="Mapas de servicios"
                android:textColor="@color/fondo"
                android:textSize="20sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_marginTop="160dp">

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/borde_redondo"
                app:srcCompat="@drawable/ic_baseline_book_24" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="183dp"
                android:layout_height="65dp"
                android:layout_gravity="bottom|center_horizontal"
                android:text="Manuales de ayuda"
                android:textColor="@color/fondo"
                android:textSize="20sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_seguridad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="@drawable/borde_redondo_barra"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/ic_baseline_phone_24"
                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="184dp"
                android:layout_height="61dp"
                android:layout_gravity="bottom|center_horizontal"
                android:text="@string/llamada_de_seguridad"
                android:textColor="@color/fondo"
                android:textSize="20sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>


</androidx.core.widget.NestedScrollView>