<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    android:fitsSystemWindows="true"
    tools:context=".Principal_activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Categoría 1 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/categoria_seguridad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp">

                <!-- Contenido de la categoría 1 -->
                <LinearLayout
                    android:id="@+id/linear_seguridad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/text_seguridad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/borde_redondo_barra"
                        android:text="Llamadas de emergencia"
                        android:textAlignment="center"
                        android:textColor="@color/texto"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/borde_redondo_barra"
                        app:srcCompat="@drawable/ic_baseline_phone_24"
                        android:layout_gravity="center_horizontal"/>

                    <Button
                        android:id="@+id/btn_seguridad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Llamada de emergencia"
                        android:layout_gravity="center_horizontal"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Categoría 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp">

                <!-- Contenido de la categoría 2 -->

            </androidx.cardview.widget.CardView>

            <!-- Categoría 3 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp">

                <!-- Contenido de la categoría 3 -->

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>


